{
    "name": "run-protractor",
    "displayName": "Run protractor",
    "description": "Starts a single protractor test",
    "version": "1.0.0",
    "publisher": "gabduss",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:typescript",
        "onLanguage:javascript"
    ],
    "contributes": {
        "commands": [],
		"configuration": {
			"type": "object",
			"title": "run-protractor",
			"properties": {
				"run-protractor.protractorConfiguration": {
					"type": "string",
					"default": "",
					"description": "Relative path to protractor configuration"
				}
			}
		}
	},
	"icon": "./icon/run-protractor-icon.png",
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
